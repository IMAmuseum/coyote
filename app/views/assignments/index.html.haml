-title = 'Listing Assignments'
-meta title: title
- cache ['v1', admin?,  @assignments] do
  .index-outer
    .index
      .index-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title

        %nav.index-nav{role:"navigation"}
          =paginate @assignments
          %h3.sr-only Actions
          = link_to new_assignment_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Assignment

        =render "table", assignments: @assignments


        %nav.index-nav{role:"navigation"}
          =paginate @assignments
          %h3.sr-only Actions
          = link_to new_assignment_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Assignment
