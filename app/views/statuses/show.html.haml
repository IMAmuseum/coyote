-title = 'Showing Status'
-meta title: title
-cache ['v1', admin?,  @status] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1=title
        %table.entity-table
          %caption.sr-only Key value pairs for this status
          %tbody
            %tr
              %th{scope: "row"}
                %p
                  %b Title:
              %td
                %p
                  = @status.title
            %tr
              %th{scope: "row"}
                %p
                  %b Description:
              %td
                %p
                  = @status.description
        %nav.entity-nav{role:"navigation"}
          = link_to statuses_path, class: 'btn btn-info', title: "View the statuses index" do
            %i.fa.fa-list{title: 'List'}
            Statuses
          = link_to edit_status_path(@status), title: "Edit this status", class: 'btn btn-primary' do
            %i.fa.fa-pencil{title: 'Pencil'}
            Edit 
