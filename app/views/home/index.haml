-title = 'Welcome to Coyote'
-description = '' #no html
-thumb = '' #MUST HAVE A VALUE or should not be set
-keywords = %w{''}  #space separated keywords
-meta title: title,
  keywords: keywords,
  description: description,
  og: { title: title,
    description: description,
    image: thumb,
    url: request.url,
  }

.container
  .row
    .col-md-12
      %header{role: "header"}
      %h1 Welcome to Coyote
    .col-md-12
      =render "queue", queue: @queue
    .col-md-12
      = form_tag import_images_path, multipart: true, class: 'form-horizontal' do |f|
        %h2>
          Import images
          <small>via <code>.csv</code>, <code>.xsl</code>, and <code>.xslx</code>
        = file_field_tag :file
        = submit_tag "Upload", class: "btn btn-success"
      %h2>
        Export images
        %small>
          %code csv
      = link_to "Export", export_images_path(format: "csv"), class: 'btn btn-info' #TODO use a button tag
