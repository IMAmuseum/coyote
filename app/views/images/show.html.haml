-title = 'Showing Image'
-meta title: title
-cache ['v1', admin?,  @image] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1=title
        %table.entity-table
          %tbody
            %tr
              %th{scope: "row"}
                %p
                  %b Url:
              %td
                %p
                  = @image.url
            %tr
              %th{scope: "row"}
                %p
                  %b Website:
              %td
                %p
                  = @image.website
        %nav.entity-nav{role:"navigation"}
          = link_to images_path, class: 'btn btn-info', title: "View the images index" do
            %i.fa.fa-list{title: 'List'}
            Images
          = link_to edit_image_path(@image), title: "Edit this image", class: 'btn btn-primary' do
            %i.fa.fa-pencil{title: 'Pencil'}
            Edit 
