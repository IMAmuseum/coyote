- title = 'Images'
-meta title: title
- cache ['v1', admin?,  @images, @q, @page] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}
            =title
            %span.sr-only ,
            %span.badge=@images.total_count

        %nav.index-nav{role:"navigation"}
          - if @images.total_pages > 1
            %h2.sr-only Pagination
            =paginate @images
          - if admin?
            %br
            %h2.sr-only Actions
            = link_to new_image_path, class: 'btn btn-success new-link' do
              %i.fa.fa-fw.fa-plus{"aria-hidden" => "true"}
              New Image




        = search_form_for @q, :html => {:class => "form-vertical"} do |f|
          .table-responsive
            %table.index-table
              %caption.sr-only Index table for images
              %thead
                %tr
                  -if admin?
                    %th{scope: "col", rowspan: 2}<
                      %span.sr-only Bulk Actions

                      .btn-group
                        -#- described_by = ''
                        -#- @images.each_with_index do |image, idx|
                          -#-  described_by += "image-id_" + image.id.to_s + " "
                        -#%button{type: "button", class: "btn btn-success dropdown-toggle", data: {toggle: "dropdown"}, "aria-haspop" => "true", "aria-expanded" => "false", "aria-describedby" => described_by}
                        %button{type: "button", class: "btn btn-success dropdown-toggle", data: {toggle: "dropdown"}, "aria-haspop" => "true", "aria-expanded" => "false", id: 'assign-to'}
                          Assign to
                          %span.caret
                        %ul.dropdown-menu<
                          - @users.each do |u|
                            %li<
                              %a{data: {user_id: u.id, actor: "user_id", selector: "image_id", bulk: "assignments", url: bulk_assignments_path}, href: "#", class: 'bulk', 'aria-describedby' => 'assign-to'}=u

                      %br
                      <input type="checkbox" name="select-all" id="select-all" />
                      <label for="select-all" class="sr-only">Select all items on the page</label>

                  %th{scope: "col"}= sort_link @q, :priority, 'Priority'
                  %th{scope: "col"}= sort_link @q, :status_code, 'Status', html: {title: "Sort by status"}
                  %th{scope: "col", rowspan: 2} Image
                  %th{scope: "col"}= sort_link @q, :title, 'Title'
                  %th{scope: "col"}= sort_link @q, :assignments_count, 'Assigned to', html: {title: "Sort by assignment count"}
                  %th{scope: "col"}= sort_link @q, :group_name, 'Group'
                  -#%th{scope: "col"}< Website
                  %th{scope: "col"}= sort_link @q, :descriptions_count, 'Descriptions'
                  %th{scope: "col"} Tags
                  %th{scope: "col", rowspan: 2}= sort_link @q, :created_at, 'Date'
                  %th{scope: "col"} Actions
                %tr<
                  %td= f.input  :priority_eq, as: :select, include_blank: "Any priority", label: "Select a priority level", required: false, collection: [["Priority", true], ["Regular", false]], label_html: {class: 'sr-only'}
                  %td= f.input  :status_code_eq, as: :select, include_blank: "Any status", label: "Select a status", required: false, collection: [["Not Described", 0], ["Partially Described", 1],  ["Ready to Review", 2], ["Completed", 3]], label_html: {class: 'sr-only'}
                  %td<
                    =f.label "Search by caption", for: "q_title_cont", class: "sr-only"
                    = f.search_field :title_cont, :class => 'input-medium form-control', placeholder: "Search by caption"
                  %td= f.input  :assignments_user_id_eq, as: :select, include_blank: "Any user", label: "Select a user", required: false, collection: User.all, label_html: {class: 'sr-only'}

                  %td= f.input  :group_id_eq, as: :select, include_blank: "Any group", label: "Select a group", required: false, collection: Group.all , label_html: {class: 'sr-only'}
                  %td<
                    =f.label "Search by description", for: "q_descriptions_text_cont", class: "sr-only"
                    = f.search_field :descriptions_text_cont, :class => 'input-medium form-control', placeholder: "Search by description"
                  %td<
                    = f.label "Search by tag", for: "q_tags_name_cont", class: "sr-only"
                    = f.search_field :tags_name_cont, :class => 'input-medium form-control', placeholder: "Search by tag"
                  %td.search-btns<
                    .btn-group
                      = link_to images_path(search_cancel: true), class: 'btn btn-sm btn-danger' do
                        %span.sr-only Clear
                        %i.fa.fa-fw.fa-close{"aria-hidden" => "true"}
                      = button_tag type: "submit", class: "btn btn-success btn-sm" do
                        %span.sr-only Search
                        %i.fa.fa-fw.fa-search{"aria-hidden" => "true"}

              %tbody
                - @images.each_with_index do |image, idx|
                  - klass = "item " + image_status_css_class(image.status_code)
                  %tr{class: klass}<
                    -if admin?
                      %td<
                        = check_box("image-id", image.id, class: "image-id", data: {"image-id" => image.id}, "aria-labeledby": "image-file-#{ image.id } ")
                    %td<
                      =link_to toggle_image_path(image, column: 'priority'), remote: true, title: "Click to toggle priority", class: "boolean-toggle" do
                        - if image.priority
                          %span.sr-only True
                          %i.fa.fa-fw.fa-check{"aria-hidden" => true}
                        - else 
                          %span.sr-only False
                          %i.fa.fa-fw.fa-close{"aria-hidden" => true}
                    %td<
                      = link_to image, class: "", title: "Show this image" do
                        =image_tag image.url, id: "image-file-#{ image.id }", alt: image.alt, "aria-describedby": "image-title-#{image.id}"
                    %td<
                      %span{id: "image-title-#{image.id}"}= to_html image.title

                    %td
                      -klass = 'label label-' + image_status_css_class(image.status_code)
                      %span{class: klass}= image.status
                    %td<
                      -assignments = image.assignments
                      = render "assignments/list", assignments: assignments, title: false
                    %td= image.group
                    %td<
                      = render "counter", descriptions: image.descriptions, meta: Metum.all
                    %td<
                      - if image.tags.count > 0
                        %ul<
                          -image.tags.each do |tag|
                            %li<
                              = link_to images_path(tag: tag.name) do
                                = tag.name
                    %td<
                      =image.created_at
                    %td.text-right<
                      .btn-group
                        = link_to image, class: "btn btn-sm btn-show", title: "Show this image", "aria-describedby": "image-title-#{image.id}" do
                          %i.fa.fa-fw.fa-eye{"aria-hidden" => "true"}
                        -if admin?
                          = link_to edit_image_path(image), class: "btn btn-sm btn-edit", title: "Edit this image", "aria-describedby": "image-title-#{image.id}" do
                            %i.fa.fa-fw.fa-pencil{"aria-hidden" => "true"}
                          = link_to image, title: "Delete this image" , class: "btn btn-sm btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{image}?"}, "aria-describedby": "image-title-#{image.id}" do
                            %i.fa.fa-fw.fa-trash{"aria-hidden" => "true"}

        -if @tags and @tags.length > 0
          %p
            - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
              = link_to images_path(tag: tag.name), :class => css_class do
                = tag.name
                %span.sr-only ,
                %span.badge
                  = tag.count

        %nav.index-nav{role:"navigation"}
          - if @images.total_pages > 1
            %h2.sr-only Pagination
            =paginate @images
          -if admin?
            %br
            %h2.sr-only Actions
            = link_to new_image_path, class: 'btn btn-success new-link' do
              %i.fa.fa-fw.fa-plus{"aria-hidden" => "true"}
              New Image
