-title = 'Showing Description'
-meta title: title
-cache ['v1', admin?,  @description] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1=title
        %table.entity-table
          %caption.sr-only Key value pairs for this description
          %tbody
            %tr
              %th{scope: "row"}
                %p
                  %b Locale:
              %td
                %p
                  = @description.locale
            %tr
              %th{scope: "row"}
                %p
                  %b Text:
              %td
                %p
                  = @description.text
            %tr
              %th{scope: "row"}
                %p
                  %b Status:
              %td
                %p
                  = @description.status
            %tr
              %th{scope: "row"}
                %p
                  %b Image:
              %td
                %p
                  = @description.image
            %tr
              %th{scope: "row"}
                %p
                  %b Metum:
              %td
                %p
                  = @description.metum
        %nav.entity-nav{role:"navigation"}
          = link_to descriptions_path, class: 'btn btn-info', title: "View the descriptions index" do
            %i.fa.fa-list{title: 'List'}
            Descriptions
          = link_to edit_description_path(@description), title: "Edit this description", class: 'btn btn-primary' do
            %i.fa.fa-pencil{title: 'Pencil'}
            Edit 
