-title = "Showing #{@description}"
-meta title: title
-cache ['v1', admin?,  @description] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        .row
          .col-md-3
            =link_to @description.image do
              =image_tag @description.image.url, class: "description-image"
          .col-md-9
            %table.entity-table
              %caption.sr-only Key value pairs for this description
              %tbody
                %tr
                  %th{scope: "row"}<
                    Text
                  %td<
                    = @description.text
                %tr
                  %th{scope: "row"}<
                    Metum
                  %td<
                    %span.label.label-info= @description.metum
                %tr
                  %th{scope: "row"}<
                    Status
                  %td<
                    = render "status", status: @description.status
                %tr
                  %th{scope: "row"}<
                    Locale
                  %td>
                    %span.label.label-default= LanguageList::LanguageInfo.find(@description.locale).name if @description.locale
                %tr
                  %th{scope: "row"}<
                    Author
                  %td<
                    = @description.user

            
            %nav.show-nav{role:"navigation"}
              -if @description.user == current_user 
                - next_image = current_user.next_image(@description.image)
                - if next_image
                  = link_to new_description_path(user_id: current_user.id, image_id: next_image.id) , class: 'btn btn-success' do
                    %i.fa.fa-fw.fa-play
                    Next image
              = link_to edit_description_path(@description), title: "Edit this description", class: 'btn btn-primary' do
                %i.fa.fa-fw.fa-pencil{title: 'Pencil'}
                Edit
              = link_to new_description_path(user_id: current_user.id, image_id: @description.image_id) , class: 'btn btn-success' do
                %i.fa.fa-fw.fa-plus
                Describe Again
              = link_to descriptions_path, class: 'btn btn-info', title: "View the descriptions index" do
                %i.fa.fa-fw.fa-list{title: 'List'}
                Descriptions
        - if admin?
          - other_descriptions = @description.siblings
          - if other_descriptions.length > 0
            %h2 Other descriptions of this image
            = render "descriptions/table", descriptions: other_descriptions
        -else
          - my_other_descriptions = @description.siblings_by(current_user)
          - if my_other_descriptions.length > 0
            %h2 Other descriptions of this image by me
            = render "descriptions/table", descriptions: my_other_descriptions
