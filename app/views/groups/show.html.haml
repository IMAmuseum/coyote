-title = 'Showing Group'
-meta title: title
-cache ['v1', admin?,  @group] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1=title
        %table.entity-table
          %caption.sr-only Key value pairs for this group
          %tbody
            %tr
              %th{scope: "row"}
                %p
                  %b Title:
              %td
                %p
                  = @group.title
        %nav.entity-nav{role:"navigation"}
          = link_to groups_path, class: 'btn btn-info', title: "View the groups index" do
            %i.fa.fa-list{title: 'List'}
            Groups
          = link_to edit_group_path(@group), title: "Edit this group", class: 'btn btn-primary' do
            %i.fa.fa-pencil{title: 'Pencil'}
            Edit 
