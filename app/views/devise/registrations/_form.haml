= simple_form_for resource, as: resource_name, url: registration_path(resource_name), validate: true, html: {multipart: true } do |f|
	= f.error_notification
	.form-inputs
		= f.input :first_name, autofocus: :true, label: false, placeholder: "First Name"
		= f.input :last_name, label: false, placeholder: "Last Name"
		= f.input :email, required: true, label: false, placeholder: "Email"
		= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "Password"
		= f.input :password_confirmation, required: true, label: false, placeholder: "Password confirmation"
	= f.button :submit, "Sign up", class: 'btn btn-primary'
