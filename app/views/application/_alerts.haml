#flash-messages
  - keys = flash.keys
  - keys.each_with_index do |name, i|
    - msg = flash[name]
    %div{class: flash_class(name), role: "alert", id: "flash_#{i}"}
      .container
        .row
          .col-md-12
            %p
              %span{id: "msg_#{i}"}=msg
              %button.close{"data-dismiss" => "alert", :type => "button", "aria-label" => "Dismiss message", "aria-describedby" => "msg_#{i}"}
                %span.sr-only
                  Dismiss message
