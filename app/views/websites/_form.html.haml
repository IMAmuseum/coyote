= simple_form_for @website, validate: true, html: {multipart: true, class: 'form-horizontal', role: "form"}, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input} do |f|
  = f.error_notification
  .form-inputs
    = f.input :title
    = f.input :url
  

  .form-actions
    .form-actions-inner
      = link_to websites_path, class: 'btn btn-info' do
        %i.fa.fa-fw.fa-list{title: "List"}>
        Websites 
      - if action_name == 'edit'
        = link_to @website, class: 'btn btn-info' do
          %i.fa.fa-fw.fa-eye{title: "Eye"}>
          View this website
      = f.button :submit, class: 'btn btn-success'
